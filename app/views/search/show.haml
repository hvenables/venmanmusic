= form_with url: search_path, method: :get, data: { remote: false } do |f|
  = f.text_field :search
  = f.submit 'Search'

- if @search_results&.any?
  %table
    %thead
      %tr
        %th
          name
        %th
          href
    %tbody
      - @search_results.each do |playlist|
        %tr
          %td
            = playlist.name
          %td
            = playlist.href
